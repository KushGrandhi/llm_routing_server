# LLM Gateway Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GATEWAY AUTHENTICATION
# =============================================================================
# Comma-separated list of API keys that clients use to authenticate
# Leave empty to allow unauthenticated access (development only)
GATEWAY_API_KEYS=your-secret-key-1,your-secret-key-2

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================
# Add keys for the providers you want to use

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# Anthropic Claude (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-...

# Google Gemini (https://aistudio.google.com/apikey)
GEMINI_API_KEY=...

# Groq (https://console.groq.com/keys)
GROQ_API_KEY=gsk_...

# HuggingFace (https://huggingface.co/settings/tokens)
HUGGINGFACE_API_KEY=hf_...

# =============================================================================
# CACHE SETTINGS
# =============================================================================
CACHE_ENABLED=true
CACHE_TYPE=local  # 'local' for in-memory, 'redis' for Redis
CACHE_DEFAULT_TTL_SECONDS=3600

# Redis settings (only needed if CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100 per minute
# Use 'memory://' for local, 'redis://localhost:6379' for Redis
RATE_LIMIT_STORAGE_URI=memory://

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
REQUEST_LOGGING_ENABLED=true
METRICS_ENABLED=true
LOG_LEVEL=INFO

# =============================================================================
# SERVER SETTINGS
# =============================================================================
PORT=5000
FLASK_DEBUG=0

# =============================================================================
# REQUEST DEFAULTS
# =============================================================================
DEFAULT_TIMEOUT_SECONDS=60
DEFAULT_MAX_RETRIES=2

